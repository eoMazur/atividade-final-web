generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Usuarios{
  id Int @id @default(autoincrement())
  nome String
  senha String
  email String @unique
  funcao Int @default(1)
  telefone String
  cidade String
  turmaId Int

  turma Turmas @relation(fields: [turmaId], references: [id])


}

model Turmas{
  id Int @id @default(autoincrement())
  nome String
  professorId Int
  alunos Usuarios[]
  materias TurmasMateriais []


}

model Materias{
  id Int @id @default(autoincrement())
  nome String
  descricao String
  turmas TurmasMateriais[]

}

model TurmasMateriais {
  id Int @id @default(autoincrement())
  turmas Turmas[]
  materias Materias[] 
}